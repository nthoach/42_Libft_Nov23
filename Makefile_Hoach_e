CC = cc

RM = rm -rf

NAME = libft.a

SRCS = ft_atoi.c		\
		ft_bzero.c	\
		ft_calloc.c	\
		ft_isalnum.c	\
		ft_isalpha.c	\
		ft_isascii.c	\
		ft_isdigit.c	\
		ft_isprint.c	\
		ft_itoa.c		\
		ft_memchr.c	\
		ft_memcmp.c	\
		ft_memcpy.c	\
		ft_memmove.c	\
		ft_memset.c	\
		ft_putchar_fd.c	\
		ft_putendl_fd.c	\
		ft_putnbr_fd.c	\
		ft_putstr_fd.c	\
		ft_split.c	\
		ft_strchr.c	\
		ft_strdup.c	\
		ft_striteri.c	\
		ft_strjoin.c	\
		ft_strlcat.c	\
		ft_strlcpy.c	\
		ft_strlen.c	\
		ft_strmapi.c	\
		ft_strncmp.c	\
		ft_strnstr.c	\
		ft_strrchr.c	\
		ft_strtrim.c	\
		ft_substr.c	\
		ft_tolower.c	\
		ft_toupper.c	\

BONUS_SRCS = ft_lstadd_back.c	\
		ft_lstadd_front.c	\
		ft_lstclear.c	\
		ft_lstdelone.c	\
		ft_lstiter.c	\
		ft_lstlast.c	\				
		ft_lstmap.c	\
		ft_lstnew.c	\
		ft_lstsize.c	\

OBJS = -Wall -Wextra -Werror

all: $(NAME)

SDIR = ./mandatory/

SRC = $(addprefix $(SDIR), $(SRCS))

$(NAME): $(SRC)
	$(CC) $(OBJS) $(SRC)
	ar rc $(NAME) *.o
	ranlib $(NAME)

clean:
	$(RM) *.o

fclean: clean
	$(RM) $(NAME)

re: fclean all

BDIR = ./bonus/

BSRC = $(addprefix $(BDIR), $(BONUS_SRCS))

bonus: $(BSRC)
	$(CC) $(OBJS) $(BSRC)
	ar rc $(NAME) *.o
	ranlib $(NAME)

.PHONY: all bonus clean
